@startuml

skinparam componentStyle uml2
skinparam monochrome true

hide circle

footer Firestore

database firestore {
    entity users {
        * id <<firebase_id>>
        * name
        * email
        ---
        profile_pic
    }

    entity reviews {
        * id <<autogenerated>>
        * user_id
        * movie_id
        * score
        * date
        ---
        message
    }

    entity friends {
        * id <<autogenerated>>
        * user_id
        * friend_of
    }

    entity movies {
        * id <<autogenerated>>
        * title
    }
}

@enduml